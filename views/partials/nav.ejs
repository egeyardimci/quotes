<% if(user != ""){ %>
<div style="justify-content: space-between" class="navbar">
  <div
    style="display: flex; flex-direction: row; height: 100%; margin-left: 2.5vw"
  >
    <p class="navbarText">Quotes</p>
    <ul style="display: flex; align-items: center">
      <li><a href=""> Profile </a></li>
      <li><a href=""> Account </a></li>
    </ul>
  </div>
  <div style="display: flex; flex-direction: row; height: 100%">
    <div style="display: flex; flex-direction: row; height: 100%">
      <p style="margin-right: 1vw" class="navbarText"><%=user.username %></p>
      <form action="/" method="POST">
        <input style="display: none" name="type" value="sign-out" />
        <ul
          style="
            display: flex;
            align-items: center;
            margin-right: 4.5vw;
            height: 50%;
          "
        >
          <button>Sign-out</button>
        </ul>
      </form>
    </div>
  </div>
</div>
<% } else{%>

<div style="justify-content: space-between" class="navbar">
  <div
    style="display: flex; flex-direction: row; height: 100%; margin-left: 2.5vw"
  >
    <p class="navbarText">Quotes</p>
  </div>
  <div
    style="
      display: flex;
      flex-direction: row;
      height: 100%;
      margin-right: 2.5vw;
    "
  >
    <ul style="display: flex; align-items: center">
      <li><a href="/login"> Login </a></li>
      <li><a href="/sign-up"> Sign-up </a></li>
    </ul>
  </div>
</div>

<% } %>
